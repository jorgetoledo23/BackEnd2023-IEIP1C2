@model LoginInViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login In</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
<div class="row justify-content-center m-5 p-5">
    
    <form class="col-md-4 text-center" asp-action="LoginIn" method="post">
            <img src="https://cdn-icons-png.flaticon.com/512/5087/5087579.png" style="width:200px; height:200px;" />
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="correo" type="email" class="form-control text-center">
        <span asp-validation-for="correo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="password" type="password" class="form-control text-center" >
        <span asp-validation-for="password" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check" >
        <div asp-validation-summary="ModelOnly" class="text-danger asp-validation"></div>
    </div>
    <button type="submit" class="btn btn-outline-info col-12">Iniciar Sesion</button>
</form>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


